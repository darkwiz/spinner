<% provide(:title, "Your Home Page") %>
<%- content_for :sidebar do -%>
<div class="span4 spinner-settings-sidenav">
 <aside>
  <section> 
    <div class="user_data">
      <%= gravatar_for current_user, size: 40 %><a href="<%= user_path current_user %>">
      <%= current_user.name %></a>@<%= current_user.username %>
    </div>
  </section>
  <section>
    <%= render 'shared/user_stats' %>
  </section>
  
  <% if current_user.private && current_user.followers.pending_requests.any? %> 
  <section>
    <%= render 'shared/request_notifications' %>
  </section>
  <% end %>
  
  <section>
    <%= render 'shared/spin_form' %>
  </section>
  
</aside>
</div>
<%- end -%>

<%- content_for :body do -%>

<div class="span8 well">
      <h3>Spins Timeline</h3>
      <%= render 'shared/timeline' %>
</div>
<%- end -%>
