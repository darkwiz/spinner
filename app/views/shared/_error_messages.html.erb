<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
     <%= t('errors.template.header', :count=> object.errors.size, :model=> t('activerecord.models.user')) %>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>