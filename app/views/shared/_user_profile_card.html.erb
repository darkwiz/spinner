<div class="span8 well">
  <div class="user_data">
              <%= gravatar_for @user, size: 52 %><a href="<%= user_path(@user) %>">
                     <%= @user.name %></a>@<%= @user.username %> 
  </div>
 
  	<div class="row-fluid">
             <div class="span5"><%= render 'shared/user_stats' %></div>
          	 <% unless current_user?(@user)%>
            	<div class="span3 offset2 btn-group">
            		<a class="btn dropdown-toggle pull-right" data-toggle="dropdown" href="#">
            			Other actions
            			<span class="caret"></span>
            		</a>
            		<ul class="dropdown-menu">
                  <% unless current_user.blocking?(@user) %>
                  <li><%= link_to "Block user", user_blocks_path(@user), :method =>:post %></li>
                  <% else %>
                  <li><%= link_to "Remove User Block", user_blocks_path(@user), :method => :delete %></li>
                  <% end %>
                  <li><%= link_to 'Report User', new_report_path(:reported_id => @user.id, :type => "ReportUser"), remote: true %></li>
            		</ul>
            	</div>
             <div class="span2"><%= render 'follow_form' if signed_in? %></div>
        	 <% end %> 
    </div> 
        
        </div>

   