<li id="<%= timeline_item.id %>">
	<%= link_to gravatar_for(timeline_item.user), timeline_item.user %>
	<span class="user">
		<%= link_to timeline_item.user.name, timeline_item.user %>
	</span>
	<span class="content"><%= timeline_item.content %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(timeline_item.created_at) %> ago.
	</span>
	<% if current_user?(timeline_item.user) %>
	<%= link_to "Delete", timeline_item, :method => :delete,
											data: { confirm: "Are you sure?" } %>
	<% end %>
</li>