<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.approved_relationships.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.approved_relationships.count %>
    </strong>
    followers
  </a>
<a href="<%# %>">
    <strong id="spins" class="stat">
      <%= @user.spins.count %>
    </strong>
    spins
  </a>
</div>
