<%- content_for :sidebar do -%>
<div class="span4 spinner-settings-sidenav">
 <aside>
  <section> 
    <div class="user_data">
      <%= gravatar_for current_user, size: 40 %><a href="<%= user_path current_user %>">
      <%= current_user.name %></a>@<%= current_user.username %>
    </div>
  </section>
</aside>
<br />
<ul class="nav nav-tabs nav-stacked">
  <li><%= link_to '<i class="icon-chevron-right"></i>Account'.html_safe, edit_user_path(current_user) %></li>
  <li><%= link_to '<i class="icon-chevron-right"></i>Theme'.html_safe, edit_style_path(current_user.style) %></li>  
</ul>
</div>
<%- end -%>
<%- content_for :body do -%>
<% provide(:title, "Edit user style") %> 

  <div class="span8 well">
    <h2>Customize your profile</h2>

    <%= form_for @style  do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :well_color %>
    <%= f.text_field :well_color %>

    <%= f.label :background_color %>
    <%= f.text_field :background_color %> 

    <%= f.label :background_image %>
    <%= f.select :background_image, @pic, :selected => @style.background_image, :include_blank => true %>
    
    <div class="field">
      <%= f.check_box :nav_inverse %>
      <%= label_tag :nav_inverse , "Invert navbar color"%>
    </div>
      <%= link_to 'Reset', reset_style_path(current_user), class: "btn ", method: :put %>
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
   

<div id="colorpicker"></div>
</div>
<%- end -%>