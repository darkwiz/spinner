<li>
  <span class="content"><%= spin.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(spin.created_at) %> ago.
    <% if current_user?(spin.user) %>
    <%= link_to "Delete", spin, :method => :delete,
    									    data: { confirm: "Are you sure?" } %>
    <% end %>
  </span>
</li>