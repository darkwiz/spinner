var modal       =   '#ajax-modal'

/* Hide the modal spin form */
$(modal).modal('hide');
/* Prepend the new spin */
$(".spins").prepend("<%= escape_javascript(render(@spin)) %>");
/* Highlight the new spin */
$("div#<%= @spin.id %>").effect("highlight", {}, 1500);
/* Updates the spins count new spin */
$("#spins").html('<%= current_user.spins.count %>')
/* Reset the create spin form */
$("#new_spin_ajax")[0].reset();
/* Reset the the spin char counter */
$(reset_counter);