var title       =   '.modal-title',
    loader      =   '.ajax-loader',
    content     =   '.modal-body-content',
    dataRemote  =   'a[data-remote=true]';
    toolbar     =   'div.modal-footer';
    modal       =   '#ajax-modal'

/* Hide the modal spin form */
$(modal).modal('hide');
/* Prepend the new spin */
$(".spins").prepend("<%= escape_javascript(render(@spin)) %>");
/* Highlight the new spin */
$("li#<%= @spin.id %>").effect("highlight", {}, 1500);
/* Reset the create spin form */
$("#new_spin_ajax")[0].reset();
