<li id="<%= comment.id %>">
	<%= link_to gravatar_for(comment.user,size:40), comment.user, class: "other" %>
	<%= link_to comment.user.name, comment.user, class: "other" %>
	<span class="content"><%= wrap_text(comment.body) %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(comment.created_at) %> ago.
	</span>
	<%= render 'shared/delete_link', object: comment %>
</li>


