<div id="ajax-modal" class="modal hide fade" tabindex="-1">
  <div class='modal-header'>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">Create Spin</h3>
  </div>
  <div class='modal-body'>
    <div class="modal-body-content">
    	<%= form_for Spin.new, :id => "new_spin_ajax", remote: true do |f| %> 
    	<div class="field">
    		<%= f.text_area :content, placeholder: "Compose new spin..."%>
    	</div>
    	<span class="help-block">140</span>
    </div>
    <div class="ajax-loader"></div>
  </div>
  <div class='modal-footer'>
    <button type="button" data-dismiss="modal" class="btn">Close</button>
    <%= f.submit "Post", class: "btn btn-primary"%>
<% end %>
  </div>
</div>