<li>
	<%= gravatar_for user, size: 50 %>
	<%= link_to user.name, user %>
	<% if current_page?(:action => 'pending_requests') && current_user.followers.pending_requests.any? %>	    
			<%= render partial: "reject", :locals => { user_rejected: user } %>
			<%= render partial: "approve", :locals => { user_approved: user } %>
	<% end %>
</li>